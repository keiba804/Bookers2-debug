<div class='row'>
<div class="col-xs-3">
	<h2>User info</h2>
	<%= render 'users/profile', user: current_user %>
	<!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->


</div>

<div class="col-xs-9">
	<h2>follower</h2>
	<!--users一覧 -->
	<table class="table">
		<thead>
			<tr>
				<th>image</th>
				<th>name</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @user.follower_user.where.not(id: current_user.id).each do |user| %>
			<tr>
				<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
				<td><%= user.name%></td>
				<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
				<td>
					<p>following:<%= link_to follower_index_path(user) do %><%= user.follower.count %><% end %></p>
				</td>
				<td>
					<p>followed:<%= link_to followed_index_path(user) do %><%= user.followed.count %><% end %></p>
				</td>
				<td>
					<% if current_user.following?(user) %>
				       <%= link_to 'unfollow', unfollow_path(user.id), method: :POST %>
				     <% else %>
				       <%= link_to 'follow', follow_path(user.id), method: :POST %>
				     <% end %>
    			</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<!--users一覧 -->
</div>
</div>